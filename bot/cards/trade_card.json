{
    "type": "AdaptiveCard",
    "version": "1.4",
    "body": [
        {
            "type": "TextBlock",
            "text": "Trade Order",
            "size": "Large",
            "weight": "Bolder"
        },
        {
            "type": "Input.Text",
            "id": "symbol",
            "label": "Symbol",
            "placeholder": "Enter stock symbol (e.g., AAPL)"
        },
        {
            "type": "Input.ChoiceSet",
            "id": "orderType",
            "label": "Order Type",
            "choices": [
                {
                    "title": "Buy",
                    "value": "buy"
                },
                {
                    "title": "Sell",
                    "value": "sell"
                }
            ]
        },
        {
            "type": "Input.Number",
            "id": "quantity",
            "label": "Quantity",
            "placeholder": "Enter number of shares",
            "min": 1,
            "max": 10000
        },
        {
            "type": "Input.Number",
            "id": "price",
            "label": "Price",
            "placeholder": "Enter limit price (optional)"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit Order",
            "data": {
                "action": "submit_trade"
            }
        },
        {
            "type": "Action.Submit",
            "title": "Cancel",
            "data": {
                "action": "cancel_trade"
            }
        }
    ]
}
