# Jain Global Slack Trading Bot - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# SLACK CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# =============================================================================
# MARKET DATA API (REQUIRED)
# =============================================================================
# Get this from https://finnhub.io/
FINNHUB_API_KEY=your-finnhub-api-key-here

# =============================================================================
# AWS CONFIGURATION (OPTIONAL - for production)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# APPLICATION CONFIGURATION (OPTIONAL)
# =============================================================================
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO
MOCK_EXECUTION_ENABLED=true

# =============================================================================
# CHANNEL CONFIGURATION (OPTIONAL)
# =============================================================================
# Comma-separated list of approved Slack channel IDs
APPROVED_CHANNELS=your-channel-id-1,your-channel-id-2
